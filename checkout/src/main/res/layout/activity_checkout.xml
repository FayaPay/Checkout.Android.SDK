<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="1dp"
        app:contentPadding="16dp">

        <com.badoualy.stepperindicator.StepperIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:stpi_circleColor="?attr/colorAccent"
            app:stpi_circleStrokeWidth="2dp"
            app:stpi_indicatorColor="?attr/colorAccent"
            app:stpi_lineColor="?attr/colorAccent"
            app:stpi_lineDoneColor="?attr/colorAccent"
            app:stpi_lineMargin="0dp"
            app:stpi_stepCount="3" />

    </android.support.v7.widget.CardView>

    <com.fayapay.checkout.customviews.NoSwipeViewPager
        android:id="@+id/checkoutViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>